{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["apps/web/**/*.ts", "src/**/*.ts"]
}